<div class="mt-4">
    <div class="row gy-3">

        {{#each courses}}
            <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="card">
                    <a href="/courses/{{this.slug}}">
                        <img
                            src="{{this.image}}"
                            class="card-img-top"
                            alt="{{this.name}}"
                        />

                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>